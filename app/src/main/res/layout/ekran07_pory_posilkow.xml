<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">

    <Button
        android:id="@+id/breakfastB"
        android:layout_width="236dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:text="śniadanie"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/secondBreakfast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button
        android:id="@+id/secondBreakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="drugie śniadanie"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/lunchB"
        app:layout_constraintEnd_toEndOf="@+id/breakfastB"
        app:layout_constraintTop_toBottomOf="@+id/breakfastB" />

    <Button
        android:id="@+id/preSupperrB"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:text="podwieczorek"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/supperB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunchB" />

    <Button
        android:id="@+id/supperB"
        android:layout_width="232dp"
        android:layout_height="0dp"
        android:layout_marginBottom="160dp"
        android:text="kolacja"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preSupperrB" />

    <Button
        android:id="@+id/lunchB"
        android:layout_width="236dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:text="obiad"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/preSupperrB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondBreakfast" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="72dp"
        android:text="Pory posiłków"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/textView26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="41dp"
        android:text="Ustaw zakres czasowy"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/breakfastB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />
</androidx.constraintlayout.widget.ConstraintLayout>