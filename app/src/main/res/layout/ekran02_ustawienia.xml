<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor">
    <Button
        android:id="@+id/textView7"
        android:layout_width="221dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:text="@string/alarm_list"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setMealsB" />

    <Button
        android:id="@+id/setMealsB"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:text="@string/meals_time"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupSoundB" />

    <Button
        android:id="@+id/setupSoundB"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:text="@string/setup_sound"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/setMealsB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="39dp"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/setupSoundB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:text="@string/theme"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="221dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:text="@string/language"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/themeGroup">
        <RadioButton android:id="@+id/LightRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textColor"
            android:text="@string/white"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/DarkRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textColor"
            android:text="@string/dark"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>